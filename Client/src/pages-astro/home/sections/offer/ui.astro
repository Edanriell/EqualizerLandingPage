---
import { Image } from "astro:assets";

import coralRectangleSmallFigure from "@public/images/svg/figures/coral-rectangle-small.svg";
import coralRectangleBigFigure from "@public/images/svg/figures/coral-rectangle-big.svg";
import snowCircleFigure from "@public/images/svg/figures/snow-circle.svg";
import yellowCircleFigure from "@public/images/svg/figures/yellow-circle.svg";
import snowCirclesFigure from "@public/images/svg/figures/snow-circles.svg";
import mobileImageSm from "@public/images/mobile-sm.png";
import mobileImageMd from "@public/images/mobile-md.png";
import mobileImageLg from "@public/images/mobile-lg.png";
import appleIcon from "@public/icons/apple.svg";
import androidIcon from "@public/icons/android.svg";

import { Link } from "@shared/ui";
---

<section class="offer">
	<div class="offer__secondary-content">
		<div class="offer__smartphone-image-wrapper">
			<picture>
				<source type="image/png" srcset={ mobileImageLg.src } media="(min-width: 1440px)">
				<source type="image/png" srcset={ mobileImageMd.src } media="(min-width: 768px)">
				<source type="image/png" srcset={ mobileImageSm.src } media="(min-width: 375px)">
				<img class="offer__smartphone-image" src={ mobileImageSm.src } alt="Image of smartphone">
			</picture>
			<Image class="offer__coral-rectangle-small" src={ coralRectangleSmallFigure } alt="CoralRectangle Figure"/>
			<Image class="offer__coral-rectangle-big" src={ coralRectangleBigFigure } alt="CoralRectangle Figure"/>
			<Image class="offer__yellow-circle" src={ yellowCircleFigure } alt="CoralRectangle Figure"/>
			<Image class="offer__snow-circles" src={ snowCirclesFigure } alt="CoralRectangle Figure"/>
			<Image class="offer__snow-circle" src={ snowCircleFigure } alt="CoralRectangle Figure"/>
		</div>
	</div>
	<div class="offer__main-content">
		<h2 class="offer__title">Premium EQ</h2>
		<p class="offer__text">Get expert-level control with a robust equalizer, volume mixer, and spatial audio. Take your listening experience to a whole new level and access all our incredible features!</p>
		<p class="offer__price-container">
			<strong class="offer__price">$4</strong>
			<small class="offer__month">/ month</small>
		</p>
		<Link style="margin-bottom: 1.6rem;" href="#" linkStyle="dark">
			<Image style="pointer-events: none; user-select: none;" src={ appleIcon } alt="Apple company logotype"/>
			<span style="pointer-events: none; user-select: none;">iOS Download</span>
		</Link>
		<Link href="##git " linkStyle="light">
			<Image style="pointer-events: none; user-select: none;" src={ androidIcon } alt="Android company logotype"/>
			<span style="pointer-events: none; user-select: none;">Android Download</span>
		</Link>
	</div>
	<div class="darkOrangeCircleDecoration"></div>
</section>

<style>
	.test {
		margin-bottom: 200px;
	}

	.offer {
		position: relative;

		@media (width >= 768px) {
			padding: 0 3.9rem;
		}

		@media (width >= 1440px) {
			padding: 0 16.5rem;
		}
	}

	.offer__secondary-content {
		position: relative;
		border-radius: 1.2rem;
		height: 60rem;
		background: var(--coarse-wool);
		display: flex;
		justify-content: center;
		z-index: 1;

		@media (width >= 768px) {
			justify-content: flex-start;
		}
	}

	.offer__smartphone-image-wrapper {
		position: relative;
	}

	.offer__smartphone-image {
		position: relative;
		z-index: 2;
		margin-top: -9.8rem;

		@media (width >= 768px) {
			margin-top: -13.8rem;
			margin-left: 5.8rem;
		}

		@media (width >= 1440px) {
			margin-top: -21.3rem;
			margin-left: 7.3rem;
		}
	}

	.offer__coral-rectangle-small {
		width: 7rem;
		height: 14rem;
		position: absolute;
		top: 0;
		left: -3.3rem;
		z-index: 1;

		@media (width >= 768px) {
			display: none;
		}
	}

	.offer__coral-rectangle-big {
		width: 14rem;
		height: 21rem;
		position: absolute;
		top: 7rem;
		left: 10.7rem;
		z-index: 1;

		@media (width >= 768px) {
			top: 3.9rem;
			left: 36.3rem;
		}

		@media (width >= 1440px) {
			width: 15.6rem;
			height: 23.4rem;
			top: 3.8rem;
			left: 49.2rem;
		}
	}

	.offer__yellow-circle {
		width: 14rem;
		height: 14rem;
		position: absolute;
		top: 14rem;
		left: -3.3rem;
		z-index: 1;

		@media (width >= 768px) {
			top: 10.9rem;
			left: 22.3rem;
		}

		@media (width >= 1440px) {
			width: 15.6rem;
			height: 15.6rem;
			top: 11.6rem;
			left: 33.6rem;
		}
	}

	.offer__snow-circles {
		width: 14rem;
		height: 14rem;
		position: absolute;
		top: 28rem;
		left: -3.3rem;
		z-index: 1;

		@media (width >= 768px) {
			top: 24.9rem;
			left: 22.3rem;
		}

		@media (width >= 1440px) {
			width: 15.6rem;
			height: 15.6rem;
			top: 27.2rem;
			left: 33.6rem;
		}
	}

	.offer__snow-circle {
		width: 7rem;
		height: 7rem;
		position: absolute;
		top: 0;
		left: 0;
		display: none;
		z-index: 1;

		@media (width >= 768px) {
			display: block;
			top: 3.9rem;
			left: 29.3rem;
		}

		@media (width >= 1440px) {
			width: 7.8rem;
			height: 7.8rem;
			top: 3.8rem;
			left: 41.4rem;
		}
	}

	.offer__main-content {
		position: relative;
		border-radius: 1.2rem;
		background: var(--fresh-salmon);
		z-index: 2;
		margin-top: -22rem;
		padding: 4.8rem 3.6rem;

		@media (width >= 768px) {
			margin-top: unset;
			max-width: 39.9rem;
			position: absolute;
			bottom: -9.6rem;
			right: 9.7rem;
			padding: 4.8rem;
		}

		@media (width >= 1440px) {
			max-width: 44.6rem;
			bottom: -11.5rem;
			right: 26rem;
			padding: 5.8rem 5.9rem 4.8rem 5.4rem;
		}
	}

	.offer__title {
		font-family: var(--font-family), sans-serif;
		font-weight: 700;
		font-size: 3.2rem;
		line-height: 125%;
		color: var(--cool-december);
		margin-bottom: 1rem;

		@media (width >= 768px) {
			margin-bottom: 1.2rem;
		}

		@media (width >= 1440px) {
			font-size: 4rem;
			line-height: 130%;
			margin-bottom: 2.2rem;
		}
	}

	.offer__text {
		font-family: var(--font-family), sans-serif;
		font-weight: 400;
		font-size: 1.8rem;
		line-height: 156%;
		color: var(--cool-december);
		margin-bottom: 3.6rem;

		@media (width >= 1440px) {
			font-size: 2rem;
			line-height: 170%;
			margin-bottom: 3.9rem;
		}
	}

	.offer__price-container {
		display: flex;
		flex-direction: row;
		align-items: center;
		margin-bottom: 3.2rem;
		column-gap: 1.6rem;
		margin-left: 1.8rem;

		@media (width >= 768px) {
			margin-left: 0.6rem;
		}

		@media (width >= 1440px) {
			margin-left: unset;
			margin-bottom: 4.6rem;
		}
	}

	.offer__price {
		font-family: var(--font-family), sans-serif;
		font-weight: 700;
		font-size: 6.5rem;
		line-height: 80%;
		color: var(--cool-december);
	}

	.offer__month {
		font-family: var(--font-family), sans-serif;
		font-weight: 400;
		font-size: 2rem;
		line-height: 160%;
		letter-spacing: -0.01em;
		color: var(--cool-december);
	}

	.darkOrangeCircleDecoration {
		display: none;
		position: absolute;
		border-radius: 100%;
		background: var(--precious-persimmon);
		filter: blur(6.8rem);
		opacity: 0.15;
		width: 38.4rem;
		height: 38.4rem;
		top: 40.2rem;
		right: -2.7rem;
		z-index: -1;

		@media (width >= 1440px) {
			display: block;
		}
	}
</style>